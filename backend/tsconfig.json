{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@services/*": ["./src/services/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@config/*": ["./src/config/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "__tests__/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
